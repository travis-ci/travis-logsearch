#!/usr/bin/env ruby

require 'elasticsearch'

es = Elasticsearch::Client.new(
  url: ENV['ELASTICSEARCH_URL'] || ENV['BONSAI_URL'],
  log: ENV['DEBUG'] == 'true',
)

es.indices.put_template(
  name: 'events',
  body: {
    template: 'events-*',
    settings: {
      index: {
        number_of_shards: 8,
        number_of_replicas: 0,
        highlight: {
          max_analyzed_offset: 5000000
        }
      }
    }
  }
)
